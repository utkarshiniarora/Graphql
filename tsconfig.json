{
  "compilerOptions": {
    "target": "ES2019",
    "lib": [
      "dom",
      "es2021"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "preserve",
    "baseUrl": ".",
   "paths": {
  "@/*": ["./src/*"]
},
    "allowJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "app",
    "components",
    "lib",
    "next-env.d.ts",
    "server",
    "styles",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
